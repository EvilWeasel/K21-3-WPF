<Window x:Class="Pong2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Pong2.Views"
        xmlns:local="clr-namespace:Pong2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <DockPanel>
            <Menu>
                <MenuItem Header="NewGame"/>
                <MenuItem Header="Difficulty">
                    <MenuItem Header="Easy"/>
                    <MenuItem Header="Hard" />
                    <MenuItem Header="Russian" />
                </MenuItem>
            </Menu>
        </DockPanel>
        <views:GameView Grid.Row="1"></views:GameView>
    </Grid>

</Window>
